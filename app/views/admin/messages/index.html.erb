<h3>客户留言</h3>

<br>

<table class="table table-hover">
  <thead>
    <tr>
      <th><h4>姓名</h4></th>
      <th><h4>电话</h4></th>
      <th><h4>日期</h4></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.name %></td>
        <td><%= message.tel %></td>
        <td><%= message.created_at.strftime('%Y-%m-%d') %></td>
      </tr>
    <% end %>
  </tbody>
</table>
